@{
}

<h1>All Products</h1>
<form asp-method="post" asp-action="OrderedProducts">
    @{
        foreach (Product P in Model)
        {
            <h2>@P.Id. @P.Name</h2>
            <p>@P.Description</p>
            <p>$@P.Price</p>
            <p>@P.Category</p>
            <input type="radio" name="Id" value="@P.Id" />
            <p></p>
        }
            <button type="submit">Order</button>
    }
</form>